<div class="panel panel-default editUser col-md-offset-3 text-center">
  <div class="panel-body">

<h2>Editar Usuario <span class="glyphicon glyphicon-user"></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :ocupación %><br />
    <%= collection_select(:user, :occupation_id, Occupation.all, :id, :name, {}, {:multiple => false}) %>
  </div>

  <div class="field">
    <%= f.label :nombre  %><br />
    <%= f.text_field :fullname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :rfc %><br />
    <%= f.text_field :rfc, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :teléfono_celular %><br />
    <%= f.text_field :mobile_phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :teléfono_de_casa %><br />
    <%= f.text_field :home_phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :linkedin_url %><br />
    <%= f.text_field :linkedin_url, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :contraseña %> <i>(Dejar en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confrimar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :contraseña_actual %> <i>(necesitamos la contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar", class: "btn btn-success" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>¿No estas contento? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Seguro?" }, method: :delete,  class: 'btn btn-danger' %></p>
<br>
<%= link_to 'Atrás', projects_path, class: "btn btn-danger btn-sm" %>
</div>
</div>