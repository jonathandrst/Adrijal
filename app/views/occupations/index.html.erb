<%= image_tag('logo.jpg')%>
<p id="notice"><%= notice %></p>

<h1>Ocupaciones</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripci&oacute;n</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occupations.each do |occupation| %>
      <tr>
        <td><%= occupation.name %></td>
        <td><%= occupation.description %></td>
        <td><%= link_to 'Detalle', occupation, class: "btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_occupation_path(occupation), class: "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', occupation, method: :delete, data: { confirm: '¿Eliminar Ocupación?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Ocupación', new_occupation_path, class: "btn btn-small btn-success" %>
