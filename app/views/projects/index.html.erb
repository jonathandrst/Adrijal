
<%= image_tag('logo.jpg')%>
<p id="notice"><%= notice %></p>

<h1>Mis Proyectos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Nombre</th>
      <th>Descripci&oacute;n</th>
      <th>Direcci&oacute;n</th>
      <th>Disponibilidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= User.find_by_id(project.user_id).fullname%></td>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.address %></td>
        <td>
          <% if project.availability_status == 1%>
            <% result = "Disponible" %>
          <% else %>
            <% result = "No Disponible"%>
          <% end %>
          <%= result %>
        </td>
        <td><%= link_to 'Detalle', project, class: "btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_project_path(project), class: "btn btn-warning"  %></td>
        <td><%= link_to 'Eliminar', project, method: :delete, data: { confirm: 'Â¿Eliminar el proyecto?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proyecto', new_project_path, class: "btn btn-small btn-success" %>
